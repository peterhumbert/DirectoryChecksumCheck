<Window x:Class="DirectoryChecksumCheck.ImageViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DirectoryChecksumCheck"
        mc:Ignorable="d"
        Title="ImageViewer" Height="450" Width="800">
    <Grid>
        <Label x:Name="lblNumber" Content="Image X of Y" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Image x:Name="img" Margin="10,31,10,10.5"/>
        <Button x:Name="btnNext" Content="" HorizontalAlignment="Left" Height="422" Margin="403,0,0,0" VerticalAlignment="Top" Width="392" Background="#00DDDDDD" Click="btnNext_Click" Foreground="#00000000" BorderBrush="#00707070" Opacity="0"/>
        <Button x:Name="btnPrev" Content="" HorizontalAlignment="Left" Height="422" VerticalAlignment="Top" Width="392" Background="#00DDDDDD" Click="btnPrev_Click" Foreground="#00000000" BorderBrush="#00707070" Opacity="0"/>

    </Grid>
</Window>
